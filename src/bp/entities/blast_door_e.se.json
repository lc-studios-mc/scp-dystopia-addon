{
	"format_version": "1.21.120",
	"minecraft:entity": {
		"description": {
			"identifier": "lc:dt_blast_door_e",
			"is_spawnable": false,
			"is_summonable": true,
			"runtime_identifier": "minecraft:snowball",
			"scripts": {
				"animate": ["ctrl"]
			},
			"animations": {
				"ctrl": "controller.animation.scpdt.blast_door_e",
				"anim.opening": "animation.scpdt.blast_door_e.opening",
				"anim.closing": "animation.scpdt.blast_door_e.closing"
			},
			"properties": {
				"scpdt:door_state": {
					"type": "enum",
					"values": ["closed", "closing", "opened", "opening"],
					"default": "closed",
					"client_sync": true
				},
				"scpdt:is_rotated": {
					"type": "bool",
					"default": false,
					"client_sync": true
				},
				"scpdt:clearance_level": {
					"type": "int",
					"range": [0, 5],
					"default": 0,
					"client_sync": true
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": ["inanimate", "blast_door"]
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "all",
					"deals_damage": "no"
				}
			},
			"minecraft:fire_immune": {},
			"minecraft:pushable": {
				"is_pushable": false,
				"is_pushable_by_piston": false
			},
			"minecraft:physics": {
				"has_collision": false,
				"has_gravity": false
			},
			"minecraft:collision_box": {
				"width": 0.1,
				"height": 0.1
			},
			"minecraft:custom_hit_test": {
				"hitboxes": [
					{
						"width": 0.1,
						"height": 0.1,
						"pivot": [0, 100, 0] // Unlikely to be hit by anything
					}
				]
			},
			"minecraft:dimension_bound": {},
			"minecraft:persistent": {},
			"minecraft:conditional_bandwidth_optimization": {
				"default_values": {
					"max_optimized_distance": 60.0,
					"max_dropped_ticks": 4,
					"use_motion_prediction_hints": false
				}
			}
		},
		"component_groups": {},
		"events": {
			"scpdt:open": {
				"sequence": [
					{
						"filters": {
							"test": "enum_property",
							"domain": "scpdt:door_state",
							"value": "closed"
						},
						"set_property": {
							"scpdt:door_state": "opening"
						}
					}
				]
			},
			"scpdt:close": {
				"sequence": [
					{
						"filters": {
							"test": "enum_property",
							"domain": "scpdt:door_state",
							"value": "opened"
						},
						"set_property": {
							"scpdt:door_state": "closing"
						}
					}
				]
			},
			"scpdt:on_opening_complete": {
				"set_property": {
					"scpdt:door_state": "opened"
				}
			},
			"scpdt:on_closing_complete": {
				"set_property": {
					"scpdt:door_state": "closed"
				}
			},
			"scpdt:enable_block_collision": {},
			"scpdt:disable_block_collision": {}
		}
	}
}
