					"swing": true,
					"interact_text": "action.interact.scpdt.stop_dead_body_timer"
				}
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {
							"filters": {
								"any_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "scp049"
									}
								],
								"all_of": [
									{
