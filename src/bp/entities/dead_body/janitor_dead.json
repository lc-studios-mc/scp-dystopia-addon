			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:interact": {
				"interactions": {
					"on_interact": {
						"filters": {
							"all_of": [
								{ "test": "is_family", "subject": "other", "value": "player" },
								{
									"test": "has_equipment",
