{
	"format_version": "1.16.0",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_radio_block",
			"properties": {
				"facing:direction": [2, 3, 4, 5],
				"radio:states": [1, 2]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"group": "itemGroup.name.sandstone",
				"category": "Construction"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_radio_block",
					"render_method": "opaque"
				}
			},
			"minecraft:pick_collision": {
				"origin": [-6, 0, -3],
				"size": [12, 14, 6]
			},
			"minecraft:entity_collision": false,
			"minecraft:geometry": "geometry.dt_radio_block",
			"minecraft:destroy_time": 1.5,
			"minecraft:on_player_placing": {
				"event": "placement_state"
			},
			"minecraft:map_color": "#3B3D94",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			},
			"minecraft:block_light_emission": 0.0,
			"minecraft:block_light_absorption": 0.3,
			"tag:lc:dystopiablock": {}
		},
		"events": {
			"placement_state": {
				"set_block_property": {
					"facing:direction": "(query.cardinal_facing_2d)"
				}
			},
			"radio:to_state1": {
				"set_block_property": {
					"radio:states": 1
				},
				"run_command": {
					"command": ["stopsound @a[r=11] scpdt.radio_static"]
				}
			},
			"radio:to_state2": {
				"set_block_property": {
					"radio:states": 2
				},
				"run_command": {
					"command": ["playsound scpdt.radio_static @a[r=11] ~~~"]
				}
			},
			"radio:sound": {
				"run_command": {
					"command": ["playsound scpdt.radio_static @a[r=11] ~~~"]
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('radio:states') == 1",
				"components": {
					"minecraft:on_interact": {
						"event": "radio:to_state2",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('radio:states') == 2",
				"components": {
					"minecraft:on_interact": {
						"event": "radio:to_state1",
						"target": "self"
					},
					"minecraft:ticking": {
						"looping": true,
						"range": [1.2, 1.2],
						"on_tick": {
							"event": "radio:sound",
							"target": "self"
						}
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 2",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 3",
				"components": {
					"minecraft:rotation": [0, 180, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 4",
				"components": {
					"minecraft:rotation": [0, 90, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 5",
				"components": {
					"minecraft:rotation": [0, 270, 0]
				}
			}
		]
	}
}
