{
	"format_version": "1.21.120",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_hang_lamp",
			"menu_category": {
				"category": "construction"
			},
			"states": {
				"facing:direction": [2, 3, 4, 5],
				"light:state": [0, 1],
				"light:blinking": [false, true]
			}
		},
		"components": {
			"scpdt:legacy_placement_state": {
				"facingDirectionState": "facing:direction",
				"facingDirectionReverse": true
			},
			"scpdt:hang_lamp": {},
			"minecraft:selection_box": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 16]
			},
			"minecraft:collision_box": false,
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_hang_lamp_on",
					"render_method": "opaque"
				}
			},
			"minecraft:geometry": "geometry.dt_hang_lamp",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1.4
			},
			"tag:lc:dystopiablock": {}
		},
		"permutations": [
			{
				"condition": "query.block_state('light:state') == 0",
				"components": {
					"minecraft:light_emission": 15
				}
			},
			{
				"condition": "query.block_state('light:state') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_hang_lamp_off",
							"render_method": "opaque"
						}
					}
				}
			},
			{
				"condition": "query.block_state('light:blinking') == true",
				"components": {
					"minecraft:tick": {
						"looping": false,
						"interval_range": [6, 46]
					}
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 2",
				"components": {
					"minecraft:transformation": { "rotation": [0, 0, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 3",
				"components": {
					"minecraft:transformation": { "rotation": [0, 180, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 4",
				"components": {
					"minecraft:transformation": { "rotation": [0, 90, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 5",
				"components": {
					"minecraft:transformation": { "rotation": [0, 270, 0] }
				}
			}
		]
	}
}
