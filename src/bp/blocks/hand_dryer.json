{
	"format_version": "1.16.0",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_hand_dryer",
			"properties": {
				"facing:direction": [2, 3, 4, 5],
				"hand_dryer:states": [1, 2]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"group": "itemGroup.name.sandstone",
				"category": "Construction"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_hand_dryer",
					"render_method": "opaque"
				}
			},
			"minecraft:pick_collision": {
				"origin": [-8, 3, -8],
				"size": [16, 13, 7]
			},
			"minecraft:entity_collision": {
				"origin": [-8, 3, -8],
				"size": [16, 13, 7]
			},
			"minecraft:geometry": "geometry.dt_hand_dryer",
			"minecraft:destroy_time": 1.6,
			"minecraft:on_player_placing": {
				"event": "placement_state"
			},
			"minecraft:map_color": "#3B3D94",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			},
			"minecraft:block_light_emission": 0.0,
			"minecraft:block_light_absorption": 0.2,
			"tag:lc:dystopiablock": {}
		},
		"events": {
			"placement_state": {
				"set_block_property": {
					"facing:direction": "(query.cardinal_facing_2d)",
					"hand_dryer:states": 1
				}
			},
			"hand_dryer:off": {
				"set_block_property": {
					"hand_dryer:states": 1
				}
			},
			"hand_dryer:on": {
				"set_block_property": {
					"hand_dryer:states": 2
				},
				"run_command": {
					"command": ["playsound scpdt.hand_dryer @a[r=15] ~~~"]
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('hand_dryer:states') == 1",
				"components": {
					"minecraft:on_interact": {
						"event": "hand_dryer:on",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('hand_dryer:states') == 2",
				"components": {
					"minecraft:ticking": {
						"looping": false,
						"range": [15.6, 15.6],
						"on_tick": {
							"event": "hand_dryer:off",
							"target": "self"
						}
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 2",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 3",
				"components": {
					"minecraft:rotation": [0, 180, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 4",
				"components": {
					"minecraft:rotation": [0, 90, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 5",
				"components": {
					"minecraft:rotation": [0, 270, 0]
				}
			}
		]
	}
}
