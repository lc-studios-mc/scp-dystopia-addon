				"event": "lc:set_facing_direction"
			},
			"tag:wood": {}
		},
		"permutations": [
			{
				"condition": "query.block_property('lc:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('lc:facing_direction') == 1",
				"components": {
