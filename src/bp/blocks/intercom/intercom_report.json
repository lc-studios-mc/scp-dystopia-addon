{
	"format_version": "1.21.120",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_intercom_report",
			"menu_category": {
				"category": "construction"
			},
			"states": {
				"facing:direction": [2, 3, 4, 5],
				"intercom:broadcasting": [false, true]
			}
		},
		"components": {
			"scpdt:legacy_placement_state": {
				"facingDirectionState": "facing:direction",
				"facingDirectionReverse": true
			},
			"scpdt:intercom": {
				"broadcastSound": "scpdt.intercom.report",
				"pitch": 1.0,
				"volume": 1.0
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_intercom",
					"render_method": "opaque"
				}
			},
			"minecraft:selection_box": {
				"origin": [-8, 0, -8],
				"size": [16, 15, 16]
			},
			"minecraft:collision_box": {
				"origin": [-8, 0, -8],
				"size": [16, 15, 16]
			},
			"minecraft:geometry": "geometry.dt_intercom",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1.7
			},
			"minecraft:light_dampening": 8,
			"tag:lc:dystopiablock": {}
		},
		"permutations": [
			{
				"condition": "query.block_state('intercom:broadcasting') == true",
				"components": {
					"minecraft:tick": {
						"looping": true,
						"interval_range": [280, 280]
					}
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 2",
				"components": {
					"minecraft:transformation": { "rotation": [0, 0, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 3",
				"components": {
					"minecraft:transformation": { "rotation": [0, 180, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 4",
				"components": {
					"minecraft:transformation": { "rotation": [0, 90, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 5",
				"components": {
					"minecraft:transformation": { "rotation": [0, 270, 0] }
				}
			}
		]
	}
}
