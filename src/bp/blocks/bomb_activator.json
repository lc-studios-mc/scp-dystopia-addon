{
	"format_version": "1.21.120",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_bomb_activator",
			"menu_category": {
				"category": "construction"
			},
			"states": {
				"facing:direction": [2, 3, 4, 5],
				"bomb_activator:state": [0, 1, 2, 3], //0 = require permission, 1 = ready, 2 = turned on, 3 = explode
				"bomb_activator:textures": [0, 1, 2, 3],
				"bomb_activator:explode_countdown": [false, true]
			}
		},
		"components": {
			"scpdt:legacy_placement_state": {
				"facingDirectionState": "facing:direction",
				"facingDirectionReverse": true
			},
			"scpdt:bomb_activator": {},
			"minecraft:selection_box": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 16]
			},
			"minecraft:collision_box": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 16]
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_bomb_activator_unable",
					"render_method": "alpha_test"
				}
			},
			"minecraft:geometry": "geometry.dt_bomb_activator",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1.6
			},
			"minecraft:light_dampening": 9,
			"tag:lc:dystopiablock": {}
		},
		"permutations": [
			{
				"condition": "query.block_state('bomb_activator:explode_countdown') == true",
				"components": {
					"minecraft:tick": {
						"looping": false,
						"interval_range": [1800, 1800]
					}
				}
			},
			{
				"condition": "query.block_state('bomb_activator:textures') == 0",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_bomb_activator_unable",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_state('bomb_activator:textures') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_bomb_activator_able",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_state('bomb_activator:textures') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_bomb_activator_activated",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_state('bomb_activator:textures') == 3",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_bomb_activator_off",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 2",
				"components": {
					"minecraft:transformation": { "rotation": [0, 0, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 3",
				"components": {
					"minecraft:transformation": { "rotation": [0, 180, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 4",
				"components": {
					"minecraft:transformation": { "rotation": [0, 90, 0] }
				}
			},
			{
				"condition": "q.block_state('facing:direction') == 5",
				"components": {
					"minecraft:transformation": { "rotation": [0, 270, 0] }
				}
			}
		]
	}
}
