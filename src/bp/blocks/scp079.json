{
	"format_version": "1.16.0",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_scp079",
			"properties": {
				"facing:direction": [2, 3, 4, 5],
				"scp079:states": [1, 2, 3]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"group": "itemGroup.name.sandstone",
				"category": "Construction"
			},
			"minecraft:pick_collision": {
				"origin": [-8, 0, -8],
				"size": [16, 13, 14]
			},
			"minecraft:entity_collision": {
				"origin": [-8, 0, -8],
				"size": [16, 13, 14]
			},
			"minecraft:geometry": "geometry.dt_scp079",
			"minecraft:destroy_time": 1.8,
			"minecraft:on_player_placing": {
				"event": "placement_state"
			},
			"minecraft:map_color": "#3B3D94",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			},
			"minecraft:block_light_emission": 0.0,
			"minecraft:block_light_absorption": 0.8,
			"tag:lc:dystopiablock": {}
		},
		"events": {
			"placement_state": {
				"set_block_property": {
					"facing:direction": "(query.cardinal_facing_2d)",
					"scp079:states": 1
				}
			},
			"scp079:to_booting": {
				"set_block_property": {
					"scp079:states": 2
				},
				"run_command": {
					"command": ["playsound scpdt.scp079.booting @a"]
				}
			},
			"scp079:to_working": {
				"set_block_property": {
					"scp079:states": 3
				},
				"run_command": {
					"command": ["playsound scpdt.scp079.broadcast @a"]
				}
			},
			"scp079:to_shutdowned": {
				"set_block_property": {
					"scp079:states": 1
				},
				"run_command": {
					"command": ["stopsound @a scpdt.scp079.broadcast", "playsound scpdt.scp079.shutdown @a"]
				}
			},
			"scp079:broadcast": {
				"run_command": {
					"command": ["playsound scpdt.scp079.broadcast @a"]
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('scp079:states') == 1",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_scp079_off",
							"render_method": "opaque"
						}
					},
					"minecraft:on_interact": {
						"event": "scp079:to_booting",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('scp079:states') == 2",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_scp079_booting",
							"render_method": "opaque"
						}
					},
					"minecraft:ticking": {
						"looping": false,
						"range": [6.0, 6.0],
						"on_tick": {
							"event": "scp079:to_working",
							"target": "self"
						}
					}
				}
			},
			{
				"condition": "query.block_property('scp079:states') == 3",
				"components": {
					"minecraft:material_instances": {
						"*": {
							"texture": "dt_scp079_on",
							"render_method": "opaque"
						}
					},
					"minecraft:ticking": {
						"looping": true,
						"range": [35.0, 50.0],
						"on_tick": {
							"event": "scp079:broadcast",
							"target": "self"
						}
					},
					"minecraft:on_interact": {
						"event": "scp079:to_shutdowned",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 2",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 3",
				"components": {
					"minecraft:rotation": [0, 180, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 4",
				"components": {
					"minecraft:rotation": [0, 90, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 5",
				"components": {
					"minecraft:rotation": [0, 270, 0]
				}
			}
		]
	}
}
