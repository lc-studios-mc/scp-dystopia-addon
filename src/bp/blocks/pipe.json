{
	"format_version": "1.16.0",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_pipe",
			"properties": {
				"facing:direction": [0, 1, 2, 3, 4, 5, 6]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"group": "itemGroup.name.sandstone",
				"category": "Construction"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_pipe",
					"render_method": "alpha_test"
				}
			},
			"minecraft:pick_collision": {
				"origin": [-6, 2, -8],
				"size": [16, 12, 16]
			},
			"minecraft:entity_collision": {
				"origin": [-6, 2, -8],
				"size": [16, 12, 16]
			},
			"minecraft:geometry": "geometry.dt_pipe",
			"minecraft:destroy_time": 1.4,
			"minecraft:on_player_placing": {
				"event": "placement_state"
			},
			"minecraft:map_color": "#3B3D94",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			},
			"minecraft:block_light_emission": 0.0,
			"minecraft:block_light_absorption": 0.0,
			"tag:lc:dystopiablock": {}
		},
		"events": {
			"placement_state": {
				"set_block_property": {
					"facing:direction": "(query.cardinal_facing)"
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('facing:direction') == 0",
				"components": {
					"minecraft:geometry": "geometry.dt_pipe_up",
					"minecraft:rotation": [0, 0, 0],
					"minecraft:pick_collision": {
						"origin": [-6, 0, -6],
						"size": [12, 16, 12]
					},
					"minecraft:entity_collision": {
						"origin": [-6, 0, -6],
						"size": [12, 16, 12]
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 1",
				"components": {
					"minecraft:geometry": "geometry.dt_pipe_up",
					"minecraft:rotation": [0, 0, 0],
					"minecraft:pick_collision": {
						"origin": [-6, 0, -6],
						"size": [12, 16, 12]
					},
					"minecraft:entity_collision": {
						"origin": [-6, 0, -6],
						"size": [12, 16, 12]
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 2",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 3",
				"components": {
					"minecraft:rotation": [0, 180, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 4",
				"components": {
					"minecraft:rotation": [0, 90, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 5",
				"components": {
					"minecraft:rotation": [0, 270, 0]
				}
			}
		]
	}
}
