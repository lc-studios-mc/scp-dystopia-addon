{
	"format_version": "1.16.0",
	"minecraft:block": {
		"description": {
			"identifier": "lc:dt_sink",
			"properties": {
				"facing:direction": [2, 3, 4, 5],
				"sink:states": [1, 2]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"group": "itemGroup.name.sandstone",
				"category": "Construction"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "dt_sink",
					"render_method": "opaque"
				}
			},
			"minecraft:pick_collision": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 15]
			},
			"minecraft:entity_collision": {
				"origin": [-8, 0, -8],
				"size": [16, 16, 15]
			},
			"minecraft:destroy_time": 1.4,
			"minecraft:on_player_placing": {
				"event": "placement_state"
			},
			"minecraft:map_color": "#3B3D94",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			},
			"minecraft:block_light_emission": 0.0,
			"minecraft:block_light_absorption": 0.3,
			"tag:lc:dystopiablock": {}
		},
		"events": {
			"placement_state": {
				"set_block_property": {
					"facing:direction": "(query.cardinal_facing_2d)",
					"sink:states": 1
				}
			},
			"sink:to_state1": {
				"set_block_property": {
					"sink:states": 1
				},
				"run_command": {
					"command": ["stopsound @a[r=15] scpdt.sink_water"]
				}
			},
			"sink:to_state2": {
				"set_block_property": {
					"sink:states": 2
				},
				"run_command": {
					"command": ["playsound scpdt.sink_water @a[r=15] ~~~"]
				}
			},
			"sink:water_sound": {
				"run_command": {
					"command": ["playsound scpdt.sink_water @a[r=15] ~~~"]
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('sink:states') == 1",
				"components": {
					"minecraft:geometry": "geometry.dt_sink",
					"minecraft:on_interact": {
						"event": "sink:to_state2",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('sink:states') == 2",
				"components": {
					"minecraft:geometry": "geometry.dt_sink_water",
					"minecraft:ticking": {
						"looping": true,
						"range": [2.5, 2.5],
						"on_tick": {
							"event": "sink:water_sound",
							"target": "self"
						}
					},
					"minecraft:on_interact": {
						"event": "sink:to_state1",
						"target": "self"
					}
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 2",
				"components": {
					"minecraft:rotation": [0, 0, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 3",
				"components": {
					"minecraft:rotation": [0, 180, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 4",
				"components": {
					"minecraft:rotation": [0, 90, 0]
				}
			},
			{
				"condition": "query.block_property('facing:direction') == 5",
				"components": {
					"minecraft:rotation": [0, 270, 0]
				}
			}
		]
	}
}
