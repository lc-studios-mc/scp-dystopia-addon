{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.keycard.reader": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"place": "query.is_sheared"
						}
					],
					"on_entry": ["/setblock ~~~ air"]
				},
				"place": {
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"on_entry": ["/setblock ~~~ redstone_block"]
				}
			}
		}
	}
}
