{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.scpdt.instantkill": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"do": "query.is_sheared"
						}
					]
				},
				"do": {
					"transitions": [
						{
							"default": "!query.is_sheared"
						}
					],
					"on_entry": ["/kill @s"]
				}
			}
		}
	}
}
